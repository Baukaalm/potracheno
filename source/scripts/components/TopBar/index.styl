$topBarHeight = 56px
$topBarBorderColor = #e1e4e7
$topBarTitleColor = #2e363e
$topBarSubtitleColor = #9fafba
$icons = burger plus add-person arrow-back check-active info arrow-forward-gray arrow-forward-blue

.top-bar
	display flex
	align-items center
	justify-content center
	height $topBarHeight
	padding 0 8px
	border-bottom 1px solid $topBarBorderColor
	box-shadow 0 0 4px rgba(0, 0, 0, .1)

	&__heading
		flex-grow 1
		flex-shrink 1
		margin 0 8px

	&__title
		font-size 20px
		font-weight 500
		color $topBarTitleColor

		.top-bar__heading--with-subtitle &
			font-size 16px
			line-height 20px

	&__subtitle
		font-size 13px
		line-height 16px
		color $topBarSubtitleColor

	&__icon
		flex-grow 0
		flex-shrink 0
		display block
		width 24px
		height 24px
		margin 0 8px
		background-position center
		background-repeat no-repeat
		cursor pointer

		&--disabled
			opacity .2

		for $icon in $icons
			&--{$icon}
				background-image url('../img/' + $icon + '.svg')
