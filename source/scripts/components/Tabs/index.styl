$tabsHeight = 48px

$tabsLinksColor = #99a4ac
$tabsAccent = #ffe151
$tabsBorderColor = #dedede

$topBarHeight = 56px

.tabs
	height 100%

	&__nav
		display table
		table-layout fixed
		width 100%
		height $tabsHeight
		line-height $tabsHeight
		white-space nowrap
		border-bottom 1px solid $tabsBorderColor

	&__link
		font-size 14px
		font-weight 500
		display table-cell
		text-align center
		text-transform uppercase
		color $tabsLinksColor
		border-bottom 2px solid transparent
		cursor pointer

		&.is-active
			color #2e363e
			border-bottom-color $tabsAccent

	&__content
		height "calc(100% - %s)" % ($tabsHeight + $topBarHeight)
		white-space nowrap
		transition transform .4s ease

	&__item
		display inline-block
		width 100%
		height 100%
		overflow-x hidden
		overflow-y auto
		white-space normal
		vertical-align top
