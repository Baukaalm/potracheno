.separator-wrapper
	position relative
	width 100%
	height 8px
	overflow hidden

.separator
	position absolute
	top 0px
	left -5px
	width calc(100% + 10px)
	height 8px
	background #eef1f5
	box-shadow inset 0 1px 2px 0 rgba(0, 0, 0, 0.32)
	border-bottom 1px solid rgba(0, 0, 0, 0.08)
	box-sizing border-box