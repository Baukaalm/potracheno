.purchase-participant
	display flex
	justify-content center
	align-items center
	padding-left 12px
	padding-right 29px
	height 28px
	border-radius 59px
	background #3f95ff
	margin-right 8px
	position relative

	&__name
		height 20px
		font-size 12px
		line-height 1.7
		font-weight 300
		color #ffffff

	&__delete-button
		width 20px
		height 20px
		position absolute
		top 4px
		right 5px
		background url('../img/ic-cancel.svg')
		background-size contain

.purchase-participant__add-button
	width 80px
	height 28px
	box-sizing border-box
	border 1px dashed #d1d5da
	border-radius 59px
	text-align center
	line-height 28px
	font-size 12px
	font-weight 300
	color #83919f
	margin-right 8px