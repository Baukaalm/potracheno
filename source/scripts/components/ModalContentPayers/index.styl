$size = 18px
$color = #3f95ff

.modal-content-payers
	&__header
		box-shadow 0 1px 1px rgba(0, 0, 0, 0.1)
		padding 18px 16px
		font-weight 700
		color #2e363e
		font-size 16px
		
.payers-list-item
	display flex
	padding-top 17px
	padding-bottom 20px
	padding-left 16px
	&__name
		flex-grow 1
		font-size 16px
		font-weight 400
		color #2e363e

.modal-content-payers__bottom-bar
	box-shadow 0 -1px 1px rgba(0, 0, 0, 0.1)
	display flex
	justify-content flex-end
	padding-right 12px

.modal-content-payers__button
	-webkit-tap-highlight-color transparent
	text-transform uppercase
	font-family "Roboto"
	outline none
	padding 20px 12px
	border none
	font-weight 500
	background-color transparent
	font-size 14px
	color #3f95ff
	
	

.payers-list-item__checkbox
	display none
	&:checked
		+label
			background $color
			border-color $color
			&:after
				transform scale(1.3)
				
.payers-list-item__label
	display block
	box-sizing border-box
	width $size
	height $size
	margin-right 19px
	border 2px solid #A0B0BE
	border-radius 10%
	position relative
	cursor pointer
	transition .2s
	&:before
		content ''
		position absolute
		display block
		height 200%
		width 200%
		top -50%
		left -50%
		z-index -1
		border-radius 50%
		transition .3s
	&:after
		content ''
		display block
		height 100%
		width 100%
		background url("../img/check.svg") center center no-repeat
		background-size contain
		transform scale(0)
		transition .2s
