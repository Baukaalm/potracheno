.balance-list-item
	display flex
	align-items center
	justify-content space-between
	padding 18px 16px
	border-bottom 1px solid #e1e4e7

.balance-list-item__direction
	display flex
	align-items center
	font-size 16px
	color #2e363e

.balance-list-item__sum
	display inline-block
	font-weight 500

	&_negative
		color #f1353b

	&_positive
		color #34c082

	&_neutral
		color #2e363e

.balance-list-item__arrow
	width 24px
	height 24px
	margin 0 8px
	display inline-block
	background: url('img/arrow-forward-long.svg')
	background-repeat no-repeat
	background-position center
