.balance-list-item
	display flex
	align-items center
	justify-content space-between
	padding 18px 16px
	border-bottom 1px solid #e1e4e7

.balance-list-item__direction
	display flex
	align-items center
	font-size 16px
	color #2e363e
	font-weight 300
	

.balance-list-item__sum
	display inline-block
	color #34c082

	
.balance-list-item__icon
	width 24px
	height 24px
	margin 0 8px
	display inline-block

	
.balance-list-item__icon_to-you
	background: url(../img/arrow-back-long.svg)
	background-repeat no-repeat
	background-position center
	
.balance-list-item__icon_from-you
	background: url(../img/arrow-forward-long.svg)
	background-repeat no-repeat
	background-position center
