
.balance-list-item
	display flex
	align-items center
	padding 18px 18px
	border-bottom 1px solid #f1f2f4
	
	&_negative
		.balance-list-item__sum
			color #f1353b
		.balance-list-item__icon
			width 20px
			height 20px
			border-radius 50%
			border solid 2px #cbcfd3
			
	&_positive
		.balance-list-item__sum
			color #34c082
		
		.balance-list-item__icon
			width 24px
			height 24px
			background-image url("img/check-circle.svg")
			position relative
			top 1px
			
			
	&_neutral
		.balance-list-item__sum
			color #2e363e
			
		.balance-list-item__icon
			width 20px
			height 20px
			border-radius 50%
			border solid 2px #cbcfd3
		
		.balance-list-item__direction
			color #83888d
			
		.balance-list-item__sum
			color #83888d

	&__direction
		flex-grow 1
		display flex
		align-items center
		font-size 18px
		font-weight normal
		line-height 1.11
		color #1d1e1f

	&__sum
		display inline-block
		font-size 18px
		font-weight 500
		line-height 1.22
		color #2fb678
		
	&__icon
		width 20px
		height 20px
		margin-right 26px
			
.balance-list-item__arrow
	width 24px
	height 24px
	margin 0 8px
	display inline-block
	background: url('img/arrow-forward-long.svg')
	background-repeat no-repeat
	background-position center



