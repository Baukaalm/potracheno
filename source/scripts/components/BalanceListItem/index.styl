.balance-list-item
	display flex
	align-items center
	justify-content space-between

.balance-list-item__direction
	display flex
	align-items center
	

.balance-list-item__sum
	display inline-block

	
.balance-list-item__icon
	width 24px
	height 24px
	margin 0 8px
	display inline-block
	
.balance-list-item__icon_to-you
	background: url(../img/arrow-back.svg)
	
.balance-list-item__icon_from-you
	background: url(../img/arrow-forward-gray.svg)
