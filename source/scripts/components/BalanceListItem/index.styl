.balance-list-item
	display flex
	align-items center
	padding 18px 18px
	border-bottom 1px solid #e1e4e7

	&_negative
		.balance-list-item__sum
			color #f1353b

	&_positive
		.balance-list-item__sum
			color #34c082

	&_neutral
		.balance-list-item__sum
			color #1D1E1F

		.balance-list-item__direction
			color #1D1E1F

		.balance-list-item__sum
			color #1D1E1F

	&_returned
		.balance-list-item__sum
			color #83888d

		.balance-list-item__direction
			color #83888d

		.balance-list-item__sum
			display none
	
	&__from
		color #1D1E1F
			
	&__to
		color #1D1E1F

	&__direction
		flex-grow 1
		display flex
		align-items center
		font-size 18px
		font-weight normal
		line-height 1.11
		color #1D1E1F

	&__sum
		display inline-block
		font-size 18px
		font-weight 500
		line-height 1.22
		color #2fb678

	&__icon
		width 20px
		height 20px
		margin-right 26px

.balance-list-item__icon
	position relative
	top 1px
	width 24px
	height 24px
	margin 0 8px
	background: inline('arrow-forward-long.svg')
	background-repeat no-repeat
	background-position center
