.Input
	position relative
	margin-top 34px
	font-size 16px

	&_middle
		font-size 24px

	&_large
		font-size 30px

	&_margin-top-small
		margin-top 20px

.input
	width 100%
	border none
	outline 0px
	color #2e363e
	border-bottom 1px solid #e1e4e7
	box-sizing border-box
	padding 0px
	padding-bottom 9px
	line-height 1.2
	font-size inherit

	&:focus
		padding-bottom 8px
		border-width 2px
		border-color #3f95ff

.floating-label
	position absolute
	top 0px
	left 0px
	line-height normal
	color rgba(46, 54, 62, 0.32)
	pointer-events none
	transition transform 0.3s, color 0.3s
	will-change transform
	transform-origin left top

	&_transformed
		transform scale(0.75) translateY(-24px)
		color #818f99

	&_small
		font-size 16px

	&_fixed
		top -25px
