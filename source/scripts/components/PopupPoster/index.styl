.popup-poster
	border-radius 100px
	background-color rgba(4, 3, 3, .5)
	padding 13px 24px 11px 24px
	justify-content center
	display flex
	position absolute
	bottom 64px
	width 296px
	left calc(150% - 148px)
	opacity 0
	transition opacity .6s
	z-index 1000
	
	&__open
		opacity 1
	
	&__text
		width 250px
		font-size 16px
		font-weight normal
		line-height 1.25
		color #ffffff
