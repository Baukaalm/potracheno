.list-item
	display flex
	padding-top 17px
	padding-bottom 20px
	padding-left 16px
	padding-right 16px
	align-items center
	&_bordered
		border-bottom 1px solid #e1e4e7
		box-sizing content-box
		
		&:last-child
			border-bottom none
			
	&__text
		flex-grow 1
		font-size 16px
		font-weight 400
		color #2e363e
		
	&__price
		text-transform uppercase
		font-size 16px
		font-weight 500
		color #2e363e
		line-height 1.25
	
	&__icon
		background-size cover
		width 24px
		height 24px
		background-image url('../img/check-active.svg')
		
