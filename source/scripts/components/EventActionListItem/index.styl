.event-action
	padding 16px
	display flex
	border-bottom 1px solid #e1e4e7

	&__text
		margin-top 2px
		font-size 14px
		font-weight 400
		color charcoal-grey
		margin-bottom 4px

	&__date
		font-size 13px
		font-weight normal
		line-height 1.23
		color #818f99

	&__icon-wrapper
		flex-shrink 0
		margin-right 16px
		background-color #eff0f2
		width 40px
		height 40px
		display flex
		align-items center
		justify-content center
		border-radius 50%

	&__icon
		width 24px
		height 24px

		&_purchase
			background url('img/actionIcons/purchase.svg')

		&_calendar
			background url('img/actionIcons/calendar.svg')

		&_exit
			background url('img/actionIcons/exit.svg')

		&_person
			background url('img/actionIcons/person.svg')

		&_pen
			background url('img/actionIcons/pen.svg')
